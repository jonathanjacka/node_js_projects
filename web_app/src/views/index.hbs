<main>

  <div class='py-12 bg-white'>
    <div class='max-w-7xl mx-auto px-4 sm:px-6 lg:px-8'>
      <div class='lg:text-center'>
        <p
          class='mt-2 text-3xl leading-8 font-extrabold tracking-tight text-gray-900 sm:text-4xl'
        >Welcome to my website</p>
        <p class='mt-4 max-w-2xl text-xl text-gray-500 lg:mx-auto'>Lorem ipsum
          dolor sit amet consect adipisicing elit. Possimus magnam voluptatum
          cupiditate veritatis in accusamus quisquam.</p>
      </div>

      <div class='mt-10'>
        <dl
          class='space-y-10 md:space-y-0 md:grid md:grid-cols-2 md:gap-x-8 md:gap-y-10'
        >

          {{#each data}}
            <div class='max-w-sm rounded overflow-hidden shadow-lg'>
              <div class='px-6 py-4'>
                <div class='font-bold text-xl mb-2'>{{this.name}}</div>
                <p class='text-gray-700 text-base'>{{this.description}}</p>
              </div>
              <div class='px-6 pt-4 pb-2'></div>
            </div>

            {{! End }}

          {{/each}}

        </dl>

      </div>
    </div>
  </div>

</main>